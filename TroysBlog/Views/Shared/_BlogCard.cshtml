@model TroysBlog.Models.ViewModels.BlogViewModel

<section class="card blog-card text-center shadow-sm">
    <img class="card-img-top blog-card-image" src="@Model.Blog.ImagePath"/>
    <article class="card-body mb-0 pb-0">
        <h3 class="card-title">@Model.Blog.Title</h3>
        <blockquote class="blockquote mb-0">
            <p>@Model.Blog.Summary</p>
            <footer class="blockquote-footer">@Model.Blog.AuthoredBy</footer>
        </blockquote>
    </article>
</section>